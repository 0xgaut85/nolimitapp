// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  address   String   @unique
  nlBalance String   @default("0")  // $NL rewards balance
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  payments     Payment[]
  agentUsages  AgentUsage[]
  swapUsages   SwapUsage[]
  apiKeys      ApiKey[]
  nlRewards    NLReward[]
}

model ApiKey {
  id         String   @id @default(cuid())
  key        String   @unique
  name       String
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  rateLimit  Int      @default(1000)  // Requests per day
  usageCount Int      @default(0)
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  lastUsedAt DateTime?
  
  @@index([key])
  @@index([userId])
}

model Payment {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  amount      String   // Amount in USDC (stored as string to preserve precision)
  currency    String   // "USDC"
  chain       String   // "base" or "solana"
  txHash      String?
  service     String   // "agent" or "swap"
  status      String   // "pending", "completed", "failed"
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([service])
  @@index([createdAt])
}

model AgentUsage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  message   String   @db.Text
  response  String   @db.Text
  fee       String   // 0.05 USDC
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
}

model SwapUsage {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  chain       String   // "base" or "solana"
  fromToken   String
  toToken     String
  fromAmount  String
  toAmount    String
  usdValue    String?  // USD value of the swap
  nlEarned    String?  // $NL tokens earned (1$ = 1 NL)
  fee         String   // 0.10 USDC
  txHash      String?
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([chain])
  @@index([createdAt])
}

// $NL Rewards tracking
model NLReward {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  amount      String   // Amount of $NL earned
  source      String   // "swap", "referral", "airdrop", etc.
  sourceId    String?  // Reference to the source (e.g., swapUsageId)
  usdValue    String?  // USD value that generated this reward
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([source])
  @@index([createdAt])
}

model DailyStat {
  id              String   @id @default(cuid())
  date            DateTime @unique
  totalUsers      Int      @default(0)
  newUsers        Int      @default(0)
  totalRevenue    String   @default("0") // Total USDC collected
  agentMessages   Int      @default(0)
  swapCount       Int      @default(0)
  swapVolumeBase  String   @default("0")
  swapVolumeSol   String   @default("0")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([date])
}

// Mixer - Anonymous transfers
model MixRequest {
  id               String   @id @default(cuid())
  chain            String   // "base" or "solana"
  token            String   // "ETH", "SOL", "USDC"
  amount           String   // Amount to mix (after fee)
  originalAmount   String   // Original deposit amount
  fee              String   // 1% fee
  senderAddress    String   // Who deposited (for tracking, not exposed)
  recipientAddress String   // Where to send final output
  depositTxHash    String?  // Initial deposit transaction
  status           String   // "pending_deposit", "deposited", "mixing", "completed", "failed"
  totalHops        Int      @default(5)   // Number of wallet hops
  currentHop       Int      @default(0)   // Current hop progress
  currentWallet    Int?     // Current pool wallet index holding funds
  delayMinutes     Int      @default(0)   // User-requested delay
  nextHopAt        DateTime? // When to execute next hop
  hopHistory       String   @default("[]") // JSON array of hop details
  errorMessage     String?  // Error details if failed
  createdAt        DateTime @default(now())
  completedAt      DateTime?
  
  @@index([status])
  @@index([chain])
  @@index([nextHopAt])
  @@index([createdAt])
}
